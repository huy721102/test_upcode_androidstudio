<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#F44336"
    android:padding="20dp"
    android:layout_height="match_parent">
 <Button
     android:id="@+id/butt_1"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Button 1"/>
 <Button
     android:id="@+id/butt_2"
     android:layout_width="wrap_content"
     android:layout_below="@id/butt_1"
     android:layout_height="wrap_content"
     android:text="Button 2"/>
 <Button
     android:id="@+id/butt_3"
     android:layout_width="wrap_content"
     android:layout_alignParentBottom="true"
     android:layout_height="wrap_content"
     android:text="Button 3"/>
 <Button
     android:id="@+id/butt_4"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_above="@id/butt_3"
     android:text="Button 4"/>
 <Button
     android:id="@+id/butt_5"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentEnd="true"
     android:text="Button 5"/>
 <Button
     android:id="@+id/butt_6"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginEnd="10dp"
     android:layout_toStartOf="@id/butt_5"
     android:text="Button 6"/>
 <Button
     android:id="@+id/butt_7"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_centerVertical="true"
     android:text="Button 7"/>
 <Button
     android:id="@+id/butt8"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_centerVertical="true"
     android:layout_marginStart="10dp"
     android:layout_toEndOf="@id/butt_7"
       android:text="Button 8"/>

</RelativeLayout>